<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/xbtnsat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_satelite"
            />

        <Button
            android:id="@+id/xbtncenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_centrar"
            />

        <Button
            android:id="@+id/xbtnanimar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_animar"
            />

        <Button
            android:id="@+id/xbtnpos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_pos"
            />

    </LinearLayout>
</FrameLayout>